<div class="main-content">
    <div class="section__content section__content--p30"> 
        <div class="container-fluid">
            <div class="table-data__tool">     
                <a href="#" data-toggle="modal" data-target="#modalAppointment" class="au-btn au-btn-icon au-btn--green au-btn--small">
                <i class="zmdi zmdi-plus"></i>Add Equipamento</a>
            </div>
        {{#if hasEquipments}}  
            <div class="row">
            {{#each equipments }}    
                <div class="col-md-4">
                    <div class="card" style="width: auto;">
                        <img class="card-img-top" src="images/{{this.Image}}" alt="Card image cap" style="height: 250px;">
                        <div class="card-body">
                            <div class="card-text">Cod: <span>{{ this.Code }}</span></div>
                            <div class="card-text">Nome: <span>{{ this.Name }}</span></div>
                            <div class="card-text">Modelo: <span>{{ this.Model}}</span></div>
                            <div class="card-text">Serial Number: <span>{{ this.SerialNumber }}</span></div>
                            <div class="card-text">Localização: <span>{{ this.Location }}</span></div>
                            <div class="card-text">Departamento: <span>{{ this.DepartmentCode }}</span></div>
                            <div class="card-text">PM: <span>{{ this.PM }}</span></div>

                        </div>
                        <div class="table-data-feature">
                            <a href="/equipment/edit/{{ this.Code }}" class="item" data-toggle="tooltip" data-placement="top" title="Edit" >
                                <i class="zmdi zmdi-edit"></i>
                            </a>
                            <a href="/equipment/delete/{{ this.Code }}" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                <i class="zmdi zmdi-delete"></i>
                            </a>
                             <a href="/report/equipment/installation/{{ this.Code }}" class="item" data-toggle="tooltip" data-placement="top" title="More">
                                <i class="zmdi zmdi-more"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}} 
            </div>
        {{/if }} 

        </div>
    </div>
</div>
        <!-- END PAGE CONTAINER-->    
<!-- POPUP-->
<div class="modal fade" id="modalAppointment" tabindex="-1" role="dialog" aria-labelledby="modalAppointmentLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
          
          <div class="modal-body">
            <form method="POST" action="/equipment/add" enctype="multipart/form-data">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
                <div class="login-logo">
                    <img src="images/icon/logo-mini.png" alt="Cool Admin" /> <strong>L-MMS</strong></a>
                </div>
                <div class="login-form">
                        <div class="form-group">
                            <label class=" form-control-label">Cod</label>
                            <input type="text" required name="Code" placeholder="Digite Code" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Nome</label>
                            <input type="text"required name="Name" placeholder="Digite Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Modelo</label>
                            <input type="text" required name="Model" placeholder="Digite Modelo Nome" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Número de série</label>
                            <input type="text"required name="SerialNumber" placeholder="Digite Número de série" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Fabricante</label>
                            <input type="text" required name="Manufacturer" placeholder="Digite Fabricante" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Foto</label>
                            <input type="file"  name="image" placeholder="Digite foto" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Custo</label>
                            <input type="number"required name="Cost" placeholder="Digite CuSto" class="form-control">
                        </div>
                       <div class="form-group">
                            <label class=" form-control-label">Data de instalação</label>
                            <input type="date"required name="InstallationDate" placeholder="Digite Data de instalação" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Data de Chegada</label>
                            <input type="date"required name="ArrivalDate" placeholder="Digite Data de Chegada" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Data da garantia</label>
                            <input type="date"required name="WarrantyDate" placeholder="Digite Data da garantia" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Localização</label>
                            <input type="text" required name="Location" placeholder="Localização" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Código do Agente</label>
                            <select name="Agent"required id="select" class="form-control">
                                {{#each Agents}}
                                    <option value="{{this.Id}}">{{this.Name}} {{this.Id}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">PM</label>
                            <select name="PM"required id="select" class="form-control">
                                    <option value="Monthly">Mensalmente</option>
                                    <option value="Annualy">Anualmente</option> 

                            </select>
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Departamento</label>
                            <select name="Department"required id="select" class="form-control">
                                    <option value="OR">OU</option>
                                    <option value="Radiology">Radiology</option> 
                                    <option value="ICU">ICU</option>
                                    <option value="CSSD">CSSD</option>
                            </select>
                        </div>
                         <div class="form-group">
                            <label class=" form-control-label">Notas</label>
                            <textarea type="text"  name="Notes" placeholder="Qualquer nota" class="form-control"></textarea>
                        </div>

                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">ADD</button>
                </div>
            </form>
          </div>  
        </div>
    </div>     
</div>   
